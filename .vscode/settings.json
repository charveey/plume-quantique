{
// Enables formatting of all .html files
"[html]": {
    "editor.defaultFormatter": "sissel.shopify-liquid"
  },
  "[liquid]": {
    "editor.defaultFormatter": "sissel.shopify-liquid",
    "editor.formatOnSave": true
  },
  "liquid.engine": "jekyll",
  "liquid.config.baseDir": ".",
  "liquid.config.method": "workspace",
  // Liquid Completion Settings
  //
  // These settings will enable/disable completions from showing.
  //
  "liquid.hover.tags": true,
  "liquid.hover.filters": true,
  "liquid.hover.objects": true,
  // Liquid Validations
  //
  // This setting will enable/disable validations in {% schema %} JSON
  //
  "liquid.hover.schema": true,
  // Set all HTML to Liquid for the repo
  "files.associations": {
    "*.html": "liquid"
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "yaml.schemas": {
    "https://json.schemastore.org/jekyll.json": [
      "file:///workspaces/plume-quantique/src/yml/site.yml",
      "file:///workspaces/plume-quantique/src/yml/translations.yml",
      "file:///home/charveey/git/plume-quantique/src/yml/site.yml"
    ]
  },
  "pieces.cloudCapabilities": "Blended",
  "pieces.telemetry": true
}